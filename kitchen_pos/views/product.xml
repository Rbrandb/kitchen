<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- product_template inherit form view -->
        <record id="product_template_form_view_id_extended" model="ir.ui.view">
            <field name="name">product.template.inherit.view.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr='//div[@name="options"]' position="inside">
                    <div>
                        <field name="kitchen_option" groups="kitchen_pos.group_kitchen_product_configuration" string="Hospitality Product"/>
                        <label for="kitchen_option" groups="kitchen_pos.group_kitchen_product_configuration"/>
                    </div>
                </xpath>
                <xpath expr="//page[last()]" position="after">
                    <page name="kitchen" string="Kitchen" attrs="{'invisible': [('kitchen_option', '!=', True)]}" groups="kitchen_pos.group_kitchen_product_configuration">
                        <group>
                            <field name="food_type"
                                   attrs="{'required': [('kitchen_option', '=', True)]}"/>
                            <field name="food_temperature"
                                   attrs="{'required': [('kitchen_option', '=', True)]}"/>
                            <field name="food_serve_as"
                                   options="{'no_create': True, 'no_create_edit': True}"
                                   attrs="{'required': [('kitchen_option', '=', True)]}"/>
                            <field name="food_doneness"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <!-- product.serve.as tree view -->
        <record id="product_serve_as_view_tree" model="ir.ui.view">
            <field name="name">product.serve.as.view.tree</field>
            <field name="model">product.serve.as</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <!-- product.serve.as form view -->
        <record id="product_serve_as_view_form" model="ir.ui.view">
            <field name="name">product.serve.as.view.form</field>
            <field name="model">product.serve.as</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- product.serve.as action window -->
        <record id="product_serve_as_action" model="ir.actions.act_window">
            <field name="name">Product Serve</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.serve.as</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Product Serve" id="product_serve_as" action="product_serve_as_action"
                parent="point_of_sale.pos_config_menu_catalog" sequence="40" groups="base.group_user"/>
    </data>
</odoo>